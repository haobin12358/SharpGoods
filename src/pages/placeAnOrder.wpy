</template>
<script >
  import wepy from 'wepy';
//  import Pick from '../components/common/picker'
  import AddressPicker from '../components/common/addressPicker'
  import Order from '../components/common/shoppingcart'
  import tip from '../utils/tip'
  import api from '../api/api'
  import Card from '../components/common/card'
  export default class PlaceAnOrder extends wepy.page{
    config = {
      navigationBarTitleText: ''
    }
    components = {
        Order:Order,
        Card:Card,
        addressPicke: AddressPicker
    }
    data = {

        exist_address: false,
        address: {
            LOname: '',
            LOtelphone: '',
            LOprovince: '',
            LOcity: '',
            LOarea: '',
            LOdetail :'',
            LOid: ''
        },
        Oabo:'',
        addreddPicker: {},
        all_order:[],
        Uname:'',
        Utel:'',
        payment_method:
          {
            sort:'支付方式',
            array: ['微信支付'],
            index:0,
          },
        logistics_data:{
            sort:'物流方式',
            array: ['顺丰'],
            index:0,
        },
        total_money:0,
        show_modal:false,
        tickets:[],
        choose_ticket:null,
          isDefult: false,
          province: '',
          city: '',
          area: '',
          provinceCode: '',
          cityCode: '',
          areaCode: '',
        from: '',
        test: 'a test',
        token : '',
        select_list:[]
    }
      async getAddressInfo(token) {
          const res = await api.getAddress({ query: {token: token} });
          if (res.data.data.length != 0) {
              this.exist_address = true;
              this.address=res.data.data[0];
          } else {
              tip.error(res.data.message)
          }
      }
    events = {
    }
    async getAllCar(token,CAid) {
        let that = this;
        tip.loading();
        let res = await api.getSelectProduct({method:'POST',query: {CAid:CAid}},token);
        this.all_order = res.data.data;
        let num = 0;
        try{
            if(that.all_order.length < 1){
            tip.error("请选择商品")
            setTimeout( () => {
                wepy.switchTab({
                    url: 'car'
                })
            }, 1000)

        }
        }catch(err){
            tip.error("请选择商品")
            setTimeout( () => {
                wepy.switchTab({
                    url: 'car'
                })
            }, 1000)
        }
        for(let i=0;i< that.all_order.length;i++){
            num += Number(that.all_order[i].CAnumber * that.all_order[i].PBprice);
            that.total_money = num.toFixed(2);
        }
        that.$apply()
        }
      async getLogistics() {
          let that = this;
          tip.loading();
          let res = await api.logistics();
          this.logistics_data.array = res.data.data;
          that.$apply()
      }
    async getAllTicket(token) {
        let that = this;
        tip.loading();
        let res = await api.getTicketAll({query: { token: token }})
        if(res.data.status == 200){
            that.tickets = res.data.data;
            that.$apply();
        }
        tip.loaded();
    }
      async getAllPrice(productlist,CAid,token) {
          let that = this;
          tip.loading();
          let res = await api.getAllPrice({query: { productlist:productlist,CAid:CAid},token: token, method: 'POST'},);
          console.log(res.data)
          if(res.data.status == 200){
              that.total_money = res.data.data.OMprice;
              console.log(that.total_money,'adasdadas');
              that.$apply();
          }
          tip.loaded();
      }
    deal_arr(data,name){
      let _arr = [];
      for(let i = 0;i<data.length;i++){
        _arr.push(data[i][name])
      }
      return _arr;
    }
    onLoad(option){

        let that = this
        let token =  wepy.getStorageSync('token');
        let CAid = null;
        if(option.list){
            CAid = option.list.split(',');
            this.select_list = CAid;
            wepy.setStorageSync('select_list',that.select_list);
        }
        this.token = token;
        this.total_money = 0;
        if(option.from != '') {that.from = option.from }
        let select = option.select==undefined?"":option.select;
        if (select=="1") {
            //选择地址
            that.exist_address = true;
            let res = wepy.getStorageSync('address')
            that.address=res;
        }else {
            this.getAddressInfo(token);
        }
        this.getLogistics();
        let sel =  wepy.getStorageSync('select_list');
        this.getAllCar(token,sel);
        this.getAllTicket(token);
    }
      async submitAll(token,params) {
      }
    methods = {
        setAddress() {
            wepy.navigateTo({
                url: "/pages/address?type=order"
            })
        },
        changeCheckBoxState() {
            this.isDefult = !this.isDefult;
        },
      bindKeyInput(e){
        this.Oabo = e.detail.value;
        this.$apply();
      },
      async placeAnOrder(e){
          let that = this;
          if(that.address.LOid == ''){
              tip.error("请选择地址")
              return
          }
          let param = {};
          let params = {};
          param = {
              "productlist" :[],
          }
          params = {
              "LOid": this.address.LOid,
              "orderitems": [],
              "OMmessage": this.Oabo,
              "OMcointype": "￥",
              "OMstatus": "未支付",
              "OMprice": this.total_money,
              "OMlogisticsName":this.logistics_data.array[this.logistics_data.index]
          }
          let len = this.all_order.length
          for(let i=0; i<len; i++){
              params.orderitems[i] = {};
              param.productlist[i] = {};
              params.orderitems[i].PBid = this.all_order[i].PBid;
              param.productlist[i].PBid = this.all_order[i].PBid;
              params.orderitems[i].PRnumber = this.all_order[i].CAnumber;
              param.productlist[i].PRnumber = this.all_order[i].CAnumber;
          }

          let ticket = this.choose_ticket
          if( ticket !== null){
              param.CAid = this.choose_ticket.CAid
              params.CAid = this.choose_ticket.CAid
          }
          let res1 = await api.getAllPrice({query: param, token: this.token, method: 'POST'})
          if(res1.data.status == 200) {
              this.total_money = res1.data.OMprice
              let res2 = await api.makeOrder({query: params,token: this.token, method: 'POST'})
              let OMid = res2.data.data.OMid;
              await wx.login({
                  success: function(res) {
                      if (res.code) {
                          console.log(res.code, 'this is code')
                          let successFun = (res3) => {
                              console.log(res3, 'gg')
                              let timeStamp = res3.data.timeStamp.toString()
                              wx.requestPayment({
                                  'appId': res3.data.appId,
                                  'timeStamp': timeStamp,
                                  'nonceStr': res3.data.nonceStr,
                                  'package': res3.data.package,
                                  'signType': res3.data.signType,
                                  'paySign': res3.data.paySign,
                                  'success':function(res){
                                      tip.success("支付成功")
                                      setTimeout( () => {
                                          wepy.switchTab({
                                              url: 'car'
                                          })
                                      }, 1000)
                                  },
                                  'fail':function(res){
                                      tip.error("支付失败")
                                      that.getAllCar()
                                  }
                              })
                          }
                          let failFun = (res) => {
                              console.log(res, 'fail!')
                              tip.error("服务器开小差了")
                          }
                          api.getPayParam({query: {OMid: OMid, code: res.code }}).then(successFun, failFun)
                      } else {
                          console.log('获取用户登录态失败！' + res.errMsg)
                      }
                  }
              });
          }else{
              tip.error(res1.data.message)
          }



      },
      Touch(e){
        return;
      },
      modalBack(){
        this.show_modal = false;
      },
      showModal(){
        this.show_modal = true;
        let date = new Date();
        let token ='';
        let that = this;
      },
      cardTap(v){
          let that = this
          this.show_modal = false;
            if(this.choose_ticket != null) {
              if(that.choose_ticket.CAid == v.CAid) {
                  this.choose_ticket = null;
              }else {
                  this.choose_ticket = v;
              }
            }else {
                this.choose_ticket = v;
            }
            let sel =  wepy.getStorageSync('select_list');
            let token =  wepy.getStorageSync('token');
          let len = this.all_order.length;
          let param = {};
          param = {
              "productlist":[]
          }
          for(let i=0; i<len; i++){
              param.productlist[i] = {};
              param.productlist[i].PBid = this.all_order[i].PBid;
              param.productlist[i].PRnumber = this.all_order[i].CAnumber;
          }
            that.getAllPrice(param.productlist,that.choose_ticket.CAid,token);
          that.$apply();
      },
      modalTouch(e){
        console.log(e)
      }
    }
  }
</script>
